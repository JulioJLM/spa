<%# Title Section %>
<%= turbo_frame_tag dom_id(post, "title_turbo_frame") do %>
  <div style="position: relative;">
    <%= link_to "", edit_post_path(post, turbo_frame: dom_id(post, "title_turbo_frame")),
                  style: "position: absolute; width: 100%; height: 100%;" %>
    <h1><%= post.title %></h1>
  </div>
<% end %>

<%# Body Section %>
<%= turbo_frame_tag dom_id(post, "body_turbo_frame") do %>
  <div style="position: relative;">
    <%= link_to "", edit_post_path(post, turbo_frame: dom_id(post, "body_turbo_frame")),
                  style: "position: absolute; width: 100%; height: 100%;" %>
    <p><%= post.body %></p>
  </div>
<% end %>

<%= button_to "Destroy this post", post, method: :delete %>
